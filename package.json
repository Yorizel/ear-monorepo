{
  "name": "elysiajs-monorepo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "nx ryn-many -t build --parallel=5",
    "dev": "nx run-many -t dev --parallel=5",
    "lint": "nx run-many -t lint --parallel=5",
    "format": "biome format --write ."
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@tooling/typescript": "workspace:*",
    "husky": "^9.1.7",
    "nx": "21.1.2"
  },
  "catalog": {
    "typescript": "5.8.3"
  },
  "workspaces": {
    "packages": [
      "tooling/*",
      "packages/*",
      "apps/*"
    ],
    "catalog": {
      "typescript": "5.8.3"
    }
  },
  "engines": {
    "node": ">=20"
  }
}
