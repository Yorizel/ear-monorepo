{
  "devDependencies": {
    "@biomejs/biome": "2.0.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@tooling/typescript": "workspace:*",
    "husky": "^9.1.7",
    "nx": "21.1.2",
    "typescript": "catalog:development"
  },
  "engines": {
    "node": ">=20"
  },
  "name": "elysiajs-monorepo",
  "private": true,
  "scripts": {
    "build": "bunx --bun nx run-many -t build --parallel=5",
    "check": "bunx --bun nx run-many -t check --parallel=5",
    "dev:all": "bunx --bun nx run-many -t dev --parallel=5",
    "dev:content-apps": "bunx --bun nx run-many -t dev --parallel=5 -p docs blog landing-page",
    "dev:dashboard": "bunx --bun nx run-many -t dev --parallel=5 -p server dashboard",
    "format": "bunx --bun biome format --write .",
    "typecheck": "bunx --bun nx run-many -t typecheck --parallel=5"
  },
  "version": "0.0.1",
  "workspaces": {
    "catalogs": {
      "astro": {
        "@astrojs/react": "^4.3.0",
        "@lucide/astro": "^0.511.0",
        "astro": "^5.8.0"
      },
      "development": {
        "typescript": "5.8.3"
      },
      "react": {
        "@types/react": "^19.1.6",
        "@types/react-dom": "^19.1.5",
        "react": "^19.1.0",
        "react-dom": "^19.1.0"
      },
      "server": {
        "elysia": "1.3.5"
      }
    },
    "packages": [
      "tooling/*",
      "packages/*",
      "apps/*"
    ]
  }
}
