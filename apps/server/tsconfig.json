{
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "module": "ES2022",
    "moduleResolution": "node",
    "paths": {
      "@api/*": ["./src/*"]
    },
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2021",
    "types": ["bun-types"]
  },
  "extends": "@tooling/typescript/base.json"
}
