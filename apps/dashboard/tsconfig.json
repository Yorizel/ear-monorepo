{
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "incremental": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./src/*"],
      "@api": ["../../apps/server/src/index"],
      "@api/*": ["../../apps/server/src/*"],
      "@packages/ui/*": ["../../packages/ui/src/*"]
    },
    "types": ["vite/client"]
  },
  "exclude": ["node_modules", "dist"],
  "extends": "@tooling/typescript/base.json",
  "references": [
    { "path": "../../packages/ui" },
    { "path": "../../apps/server" }
  ],
  "include": ["**/*.ts", "**/*.tsx"]
}
