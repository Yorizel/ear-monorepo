---
import { Image } from "astro:assets";
const slugs = [
  "elysia",
  "astro",
  "react",
  "drizzle",
  "turborepo",
  "pnpm",
  "tanstack",
  "tailwindcss",
];
const images = slugs.map(
  (slug) => `https://cdn.simpleicons.org/${slug}/${slug}`,
);

// Update specific image URLs
images[0] = "https://elysiajs.com/assets/elysia.svg"; // Elysia
images[6] =
  "https://cdn.brandfetch.io/idWcj3JjN7/w/100/h/100/theme/dark/logo.png?c=1dxbfHSJFAPEGdCLU4o5B"; // TanStack

const technologies = [
  {
    imageURL: images[0],
    name: "Elysia (Bun)",
    description:
      "Fast, type-safe backend with automatic OpenAPI generation and lightning-fast performance",
  },
  {
    imageURL: images[1],
    name: "Astro",
    description:
      "Static site generation with component islands architecture for optimal performance",
  },
  {
    imageURL: images[6],
    name: "TanStack Start",
    description:
      "Full-stack React and Solid framework powered by TanStack Router",
  },
  {
    imageURL: images[3],
    name: "Drizzle ORM",
    description:
      "Type-safe database operations with PostgreSQL and automatic schema generation",
  },
  {
    imageURL: images[4],
    name: "Turborepo",
    description:
      "High-performance build system for monorepos with intelligent caching",
  },
  {
    imageURL: images[5],
    name: "pnpm",
    description:
      "Fast, disk space efficient package manager with workspace support",
  },
  {
    imageURL: "https://cdn.simpleicons.org/biome/biome",
    name: "BiomeJS",
    description:
      "Fast, modern JavaScript toolkit for code linting, formatting, and analysis",
  },
  {
    imageURL: images[7],
    name: "Tailwind CSS",
    description: "Utility-first CSS framework with Shadcn UI components",
  },
];
---

<section id="tech-stack" class="container flex flex-col items-center justify-center min-h-screen mx-auto snap-start flex items-center justify-center gap-4">
    <div class="flex flex-col gap-4 items-center text-center">
      <h2 class="text-4xl md:text-5xl font-bold text-white">
        Technologies
      </h2>
      <p class="text-base md:text-lg text-gray-400 max-w-2xl md:max-w-3xl mx-auto leading-relaxed">
        Cutting-edge technologies working in perfect harmony to deliver exceptional developer experience and performance
      </p>
    </div>
    <div class="grid gap-4 grid-cols-1 md:grid-cols-2 lg:grid-cols-4   ">
      {
        technologies.map((tech) => {
          return (
            <div
              class="group relative overflow-hidden rounded-3xl bg-gradient-to-br border backdrop-blur-sm hover:scale-[1.02] transition-all duration-700 ease-out hover:shadow-2xl from-stone-700/10 via-stone-700/5 to-transparent border-white/10 shadow-stone-500/10 bento-card"
            >
              <!-- Animated background -->
              <div class="absolute inset-0 bg-gradient-to-br from-white/[0.08] via-white/[0.02] to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-700"></div>
              <!-- Floating orb effect -->
              <div class="absolute -top-24 -right-24 w-48 h-48 bg-gradient-to-br from-white/10 to-transparent rounded-full blur-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-1000"></div>
              <div class="relative h-full flex flex-col p-8">
                <div class="mb-6 flex justify-center items-center">
                 
                  
                          <Image
                            src={tech.imageURL ?? ""}
                            alt="Astro logo"
                            width={48}
                            height={48}
                            class="w-12 h-12 object-contain group-hover:scale-110 transition-transform duration-300"
                            loading="lazy"
                          />
                        
                    
                  
                </div>
                <h3 class="text-xl font-semibold text-white mb-3 group-hover:text-white transition-colors duration-300">
                  {tech.name}
                </h3>
                <p class="text-gray-400 text-sm leading-relaxed group-hover:text-gray-300 transition-colors duration-300">
                  {tech.description}
                </p>
              </div>
              <!-- Shimmer effect -->
              <div class="absolute inset-0 -translate-x-full group-hover:translate-x-full transition-transform duration-1000 bg-gradient-to-r from-transparent via-white/10 to-transparent skew-x-12"></div>
            </div>
          );
        })
      }
    </div>
<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(40px) scale(0.95);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }
  .bento-card {
    animation: fadeInUp 0.8s ease-out forwards;
    opacity: 0;
  }
</style>
</section>
