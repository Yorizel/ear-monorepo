{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"overrides": [
		{
			"include": [
				"*.astro"
			],
			"linter": {
				"rules": {
					"style": {
						"useConst": "off",
						"useImportType": "off"
					}
				}
			},
			"formatter": {
				"enabled": true,
				"formatWithErrors": false,
				"attributePosition": "auto",
				"indentStyle": "tab",
				"indentWidth": 2,
				"lineWidth": 80,
				"lineEnding": "lf"
			}
		}
	],
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
